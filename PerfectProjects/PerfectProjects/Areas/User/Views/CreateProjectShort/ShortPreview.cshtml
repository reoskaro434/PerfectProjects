@{Layout = "~/Views/Shared/_Layout.cshtml";}
@model PerfectProjects.Model.ViewModel.ShortPreviewModel

<br />
<br />
<br />
<form method="post" enctype="multipart/form-data">
    <p hidden>@Model.ShortDescription.Id</p>
    <p hidden>@Model.ShortDescription.UserId</p>
        <div class="justify-content-center text-center">
            <div class="col-md-8 offset-md-2">
                <h2>@Model.ShortDescription.Title</h2>
            </div>
            <div class="col-md-8  offset-2">
                <p><img id="output" src="data:image/gif;base64,@Model.ImageString" /></p>
            </div>
            <div id="textArea" class="col-md-8  offset-md-2">
                <p class="text-break">@Model.ShortDescription.Description</p>
            </div>
            <div class="small col-md-2 offset-md-8">
                <p>Author: @Model.NickName</p>
            </div>
        </div>
        <div>
            <button type="submit" asp-controller="Home" asp-action="Index" class="btn btn-success">save</button>
            <button type="submit" asp-action="Edit" asp-route-id="@Model.ShortDescription.Id" class="btn btn-success">back</button>

        </div>
</form>    
<script src="~/js/CreateProjectShortController.js"></script>
